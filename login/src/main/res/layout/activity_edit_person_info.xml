<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <midian.baselib.widget.BaseLibTopbarView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="15.4dp" />

    <EditText
        android:id="@+id/content_et"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:hint="@string/hint_please_input_nickname"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="@color/text_bg20"
        android:textSize="15.4sp" />

    <Button
        android:id="@+id/modifiy_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:background="@drawable/modifiy_phone_bg"
        android:gravity="center"
        android:text="修改手机号"
        android:textColor="@color/white"
        android:visibility="gone" />

</LinearLayout>