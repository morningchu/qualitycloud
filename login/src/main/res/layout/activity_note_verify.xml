<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <midian.baselib.widget.BaseLibTopbarView
        android:id="@+id/topbar_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40.3dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#FF22B1B1"
            android:textSize="46sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/2"
            android:textColor="#FF22B1B1"
            android:textSize="23sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="17dp"
        android:text="短信验证"
        android:textColor="#FF22B1B1"
        android:textSize="15.4sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="75.5dp"
        android:text="修改密码须验证您的手机号"
        android:textColor="#FF9B9B9B"
        android:textSize="15.4sp" />

    <LinearLayout
        android:id="@+id/ll_account_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="69dp"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="21dp"
            android:paddingLeft="23dp"
            android:paddingRight="38.1dp"
            android:paddingTop="21dp"
            android:text="账号"
            android:textColor="#FF333333"
            android:textSize="15.4sp" />

        <EditText
            android:id="@+id/account_et"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="17.3dp"
            android:layout_weight="1"
            android:background="@null"
            android:ems="10"
            android:hint="请输入您的手机号"
            android:maxLength="11"
            android:phoneNumber="true"
            android:textSize="15.4sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_auth_code_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="21dp"
            android:paddingLeft="23dp"
            android:paddingRight="22.8dp"
            android:paddingTop="21dp"
            android:text="验证码"
            android:textColor="#FF333333"
            android:textSize="15.4sp" />

        <EditText
            android:id="@+id/auth_code_et"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入短信验证码"
            android:maxLength="6"
            android:textSize="15.4sp" />

        <Button
            android:id="@+id/get_auth_code_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="17.3dp"
            android:background="@drawable/auth_code_btn_bg"
            android:paddingBottom="11dp"
            android:paddingLeft="15.4dp"
            android:paddingRight="11.4dp"
            android:paddingTop="11dp"
            android:text="验证码"
            android:textColor="#FF22B1B1"
            android:textSize="13.4sp" />
    </LinearLayout>

    <Button
        android:id="@+id/next_btn"
        android:layout_width="210dp"
        android:layout_height="41.3dp"
        android:layout_gravity="center"
        android:layout_marginTop="81.6dp"
        android:background="@drawable/bg_rectangle_green"
        android:text="下一步"
        android:textColor="#FFFFFFFF"
        android:textSize="17.3sp" />

</LinearLayout>