<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <midian.baselib.widget.BaseLibTopbarView
        android:id="@+id/topbar_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40.3dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textColor="#FF22B1B1"
            android:textSize="46sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/2"
            android:textColor="#FF22B1B1"
            android:textSize="23sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="17dp"
        android:text="重置密码"
        android:textColor="#FF22B1B1"
        android:textSize="15.4sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="75.5dp"
        android:text="请重新设置您的密码"
        android:textColor="#FF9B9B9B"
        android:textSize="15.4sp" />

    <LinearLayout
        android:id="@+id/password_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="69dp"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="21dp"
            android:paddingLeft="23dp"
            android:paddingRight="38.1dp"
            android:paddingTop="21dp"
            android:text="密码"
            android:textColor="#FF333333"
            android:textSize="15.4sp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="17.3dp"
            android:layout_weight="1"
            android:background="@null"
            android:ems="10"
            android:maxLength="16"
            android:hint="请输入您的密码"
            android:inputType="textPassword"
            android:textSize="15.4sp" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/repetition_password_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="21dp"
            android:paddingLeft="23dp"
            android:paddingRight="38.1dp"
            android:paddingTop="21dp"
            android:text="重复"
            android:textColor="#FF333333"
            android:textSize="15.4sp" />

        <EditText
            android:id="@+id/repetition_password"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="17.3dp"
            android:layout_weight="1"
            android:background="@null"
            android:ems="10"
            android:maxLength="16"
            android:hint="请再次输入您的密码"
            android:inputType="textPassword"
            android:textSize="15.4sp" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <Button
        android:id="@+id/succend_btn"
        android:layout_width="210dp"
        android:layout_height="41.3dp"
        android:layout_gravity="center"
        android:layout_marginTop="81.6dp"
        android:background="@drawable/bg_rectangle_green"
        android:text="完成"
        android:textColor="#FFFFFFFF"
        android:textSize="17.3sp" />

</LinearLayout>