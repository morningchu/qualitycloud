<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <midian.baselib.widget.BaseLibTopbarView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="15dp"
        android:background="@color/divide_line" >
    </View>

    <LinearLayout
        android:id="@+id/modify_password_ll"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/default_button"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15.4dp"
        android:paddingRight="15.6dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="修改密码"
            android:textColor="@color/text_bg20"
            android:textSize="15.4sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_right_arrow"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divide_line" >
    </View>

    <LinearLayout
        android:id="@+id/modify_phone_ll"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/default_button"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15.4dp"
        android:paddingRight="15.6dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="修改手机"
            android:textColor="@color/text_bg20"
            android:textSize="15.4sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_right_arrow"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divide_line" >
    </View>

</LinearLayout>