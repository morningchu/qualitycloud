<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/map_ioc_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_loc"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:padding="5dp"
            android:text="电梯"
            android:textColor="@color/text_bg22"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/ioc_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_map_default" />
    </LinearLayout>

    <TextView
        android:id="@+id/number_tx"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignRight="@id/map_ioc_layout"
        android:layout_alignTop="@id/map_ioc_layout"
        android:background="@drawable/map_number_bg"
        android:gravity="center"
        android:textSize="10sp"
         />

</RelativeLayout>