<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_bg"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="15dp"
        android:background="@color/divide_line" />

    <LinearLayout
        android:id="@+id/item_my_att"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/default_button_white"
        android:orientation="vertical"
        android:padding="15dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

           

			 <TextView
			     android:id="@+id/attentionz_tv"
			     android:layout_width="wrap_content"
			     android:layout_height="wrap_content"
			     android:text="电梯编号："
			     android:textColor="@color/text_bg20"
			     android:textSize="13.4sp" />

            <TextView
                android:id="@+id/name_my_attention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="552233"
                android:textColor="#ff75a6ff"
                android:textSize="13.4sp" />

            <TextView
                android:id="@+id/state_my_attention"
                android:layout_width="wrap_content"
                android:layout_height="21.1dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/green_oval_bg"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="良好"
                android:textColor="@color/white"
                android:textSize="13.4sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />
			 <ImageView
                android:id="@+id/img_near_elevator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/icon_neardy_elevator" />
            <TextView
                android:id="@+id/distance_my_attention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="距8.8公里"
                android:textColor="@color/text_bgb0"
                android:textSize="11.5sp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/time_my_attention_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/time_attention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="使用单位："
                android:textColor="@color/text_bg60"
                android:textSize="13.4sp" />

            <TextView
                android:id="@+id/time_my_attention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/text_bg60"
                android:textSize="13.4sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/address_my_attention_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="企业名称："
                android:textColor="@color/text_bg60"
                android:textSize="13.4sp" />

            <TextView
                android:id="@+id/address_my_attention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/text_bg60"
                android:textSize="13.4sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divide_line" />

</LinearLayout>