<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@android:color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/app_bg" >

            <TextView
                android:id="@+id/txt_share_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="分享给好友"
                android:ellipsize="end"
            	android:singleLine="true"
            	android:maxLength="8"
                android:textColor="@android:color/black"
                android:textSize="18.0sp" />

            <ImageButton
                android:id="@+id/btn_share_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:padding="5dp"
                android:background="@drawable/close" />
            
        </RelativeLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/rl_pyq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:padding="5dp" >

                <ImageView
                    android:id="@+id/img_pyq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/share_pyq" />

                <TextView
                    android:id="@+id/tv_pyq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_pyq"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:paddingTop="5dp"
                    android:singleLine="true"
                    android:text="朋友圈"
                    android:textColor="@color/first_page_cata" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_wx"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:padding="5dp" >

                <ImageView
                    android:id="@+id/img_wx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/share_wx" />

                <TextView
                    android:id="@+id/tv_wx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_wx"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:paddingTop="5dp"
                    android:singleLine="true"
                    android:text="微信好友"
                    android:textColor="@color/first_page_cata" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_qq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:padding="5dp" >

                <ImageView
                    android:id="@+id/img_qq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/share_qq" />

                <TextView
                    android:id="@+id/tv_qq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_qq"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:paddingTop="5dp"
                    android:singleLine="true"
                    android:text="QQ"
                    android:textColor="@color/first_page_cata" />
            </RelativeLayout>
        </LinearLayout>
        
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/rl_kj"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:padding="5dp" >

                <ImageView
                    android:id="@+id/img_kj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/share_kj" />

                <TextView
                    android:id="@+id/tv_kj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_kj"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:paddingTop="5dp"
                    android:singleLine="true"
                    android:text="QQ空间"
                    android:textColor="@color/first_page_cata" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_xinlang"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:padding="5dp" >

                <ImageView
                    android:id="@+id/img_xinlang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/share_xinlang" />

                <TextView
                    android:id="@+id/tv_xinlang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_xinlang"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:paddingTop="5dp"
                    android:singleLine="true"
                    android:text="新浪微博"
                    android:textColor="@color/first_page_cata" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_duanxin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:padding="5dp" >

                <ImageView
                    android:id="@+id/img_duanxin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/share_duanxin" />

                <TextView
                    android:id="@+id/tv_duanxin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_duanxin"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:paddingTop="5dp"
                    android:singleLine="true"
                    android:text="短信"
                    android:textColor="@color/first_page_cata" />
            </RelativeLayout>
        </LinearLayout>
        
        
    </LinearLayout>

</RelativeLayout>
